<!-- PLAY -->
<div class="row">
  <!-- YOUR PLAY -->
  <div class="col-md-4 col-md-offset-2 col-xs-6">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h2 class="panel-title text-center">
          <%= @player_move %>
        </h2>
      </div>
      <div class="panel-body">
        <img src="/assets/images/<%= @player_move %>.png" class="img-responsive">
      </div>
    </div>
  </div>

  <!-- HIS PLAY -->
  <div class="col-md-4 col-xs-6">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title text-center">
          <%= @computer_play %>
        </h2>
      </div>
      <div class="panel-body">
        <img src="/assets/images/<%= @computer_play %>.png" class="img-responsive">
      </div>
    </div>
  </div>
</div>

<!-- RESULTS -->
<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="well text-center">
      <h1>
        <span class="label <%= @result_label %>">You <%= @result %>!</span>
      </h1>
    </div>
  </div>
</div>
